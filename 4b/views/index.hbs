<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Heroes</title>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark sticky-top navbar-expand-lg">
      <div class="container-fluid d-flex">
        <h1 class="navbar-brand">Heroes</h1>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <div class="d-flex ms-auto">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-auto">
              <li class="nav-item">
                <button class="btn nav-link" data-bs-toggle="modal" data-bs-target="#modalAddType">Add Type</button>
              </li>
              <li class="nav-item">
                <button class="nav-link btn" data-bs-toggle="modal" data-bs-target="#modalAddHero">Add Hero</button>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>
    {{#if message}}
    <div class="alert alert-{{message.type}}" role="alert">
      {{message.message}}
    </div>
    {{/if}}


    <div class="container mt-4">
      <div class="row">

        {{#each heros}}
        <div class="col col-3">
          <div class="card" style="width: 12rem;">
            <img src="/public/image/{{this.photo}}" class="img-fluid" style="width: 12rem;height:16rem; object-fit:cover;"alt="{{this.name}}">
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.type}}</p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>




    <div class="modal fade" id="modalAddType" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="/type" method="POST">
            <div class="modal-header">
              <h5 class="modal-title" >Add Type</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3 row">
                <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="inputName" name="type" placeholder="Type Name" required>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="modal fade" id="modalAddHero" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="/heroes" method="post" enctype="multipart/form-data"> 
            <div class="modal-header">
              <h5 class="modal-title" >Add Hero</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3 row">
                <label for="inputHero" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="inputHero" name="hero" placeholder="Hero Name" required>
                </div>
              </div>
              <div class="mb-3 row">
                <label for="inputType" class="col-sm-2 col-form-label">Type</label>
                <div class="col-sm-10">
                  <select class="form-select" name="typeId" id="inputType" aria-label="Default select example">
                    <option selected>Open this select menu</option>
                    {{#each types}}
                    <option value={{this.id}}>{{this.name}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>
              <div class="mb-3 row">
                <label for="inputPhoto" class="col-sm-2 col-form-label">Photo</label>
                <div class="col-sm-10">
                  <input type="file" class="form-control" id="inputPhoto" name="photo">
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
